<%- include('layouts/header.ejs') %>

<h1 class="mb-4">Group Chats</h1>

<div class="row">
    <!-- Sidebar for Group Lists -->
    <div class="col-md-3">
        <h4>My Groups</h4>
        <ul class="list-group">
            <% if (myGroups.length > 0) { 
                for (let i = 0; i < myGroups.length; i++) { %>
                    <li class="list-group-item list-group-item-dark cursor-pointer group-list" data-id="<%= myGroups[i]._id %>">
                        <img src="<%= myGroups[i].image ? '/uploads/' + myGroups[i].image : '/images/default-group.png' %>" 
                             alt="Group Image" width="50px" height="50px">
                        
                        <%= myGroups[i].name %>
                    </li>
            <% } } else { %>
                <li class="list-group-item">You have not created any groups.</li>
            <% } %>
        </ul>

        <h4 class="mt-3">Joined Groups</h4>
        <ul class="list-group">
            <% if (joinedGroups.length > 0) { 
                for (let i = 0; i < joinedGroups.length; i++) { %>
                    <li class="list-group-item list-group-item-light cursor-pointer group-list" data-id="<%= joinedGroups[i]._id %>">
                        <img src="<%= joinedGroups[i].image ? '/uploads/' + joinedGroups[i].image : '/images/default-group.png' %>" 
                             alt="" width="50px" height="50px">
                        <%= joinedGroups[i].name %>
                    </li>
            <% } } else { %>
                <li class="list-group-item">You have not joined any groups.</li>
            <% } %>
        </ul>
    </div>

    <!-- Chat Section -->
    <div class="col-md-9">
        <h3 class="group-start-head">Start Chat</h3>
        <div class="group-chat-section">
            <div id="group-chat-container"></div>
            
            <form action="" id="group-chat-form">
                <input type="text" name="message" placeholder="Enter Message" id="group-message" class="border" autocomplete="off">
                <input type="submit" value="Send Message" class="btn btn-primary">
            </form>
        </div>
    </div>
</div>

<%- include('layouts/footer.ejs') %>
